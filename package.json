{
  "name": "nuber-server",
  "version": "1.0.0",
  "description": "Server for the (N)Uber Clone Course on Nomad Academy. GraphQL, TypeScript, NodeJS",
  "main": "index.js",
  "repository": "https://github.com/ksygit/nuber-server",
  "author": "ksygit <ksm6902@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^12.7.2",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "dev": "cd src && nodemon --exec ts-node index.ts -e ts, garphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "cors": "^2.8.5",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "graphql-tools": "^4.0.5",
    "graphql-yoga": "^1.18.2",
    "helmet": "^3.20.0",
    "merge-graphql-schemas": "^1.7.0",
    "morgan": "^1.9.1"
  }
}
